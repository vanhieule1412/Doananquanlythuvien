@model IEnumerable<DoanquanlysachV3.Models.THEDOCGIA>

@{
    ViewBag.Title = "IndexTDG";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Danh sách các thẻ đọc giả</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaTheDocGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDocGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayTao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayHet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaDocGia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTheDocGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenDocGia)
        </td>
        <td>

            @{
                
                string ngaytao = item.NgayTao.Value.ToShortDateString();
            }
            @Html.DisplayFor(modelItem => ngaytao)
        </td>
        <td>
            @{
                string ngayhet = item.NgayHet.Value.ToShortDateString();
            }
            @Html.DisplayFor(modelItem => ngayhet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaDocGia)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
            @Html.ActionLink("Xem thông tin chi tiết", "Formxemthongthedocgia", new { id = item.MaTheDocGia }) |
            @Html.ActionLink("Lập phiếu mượn", "Formthemphieumuon", new { id = item.MaTheDocGia }) |
            @Html.ActionLink("Xóa", "Formxoathedocgia", new {  id=item.MaTheDocGia })
        </td>
    </tr>
}

</table>
