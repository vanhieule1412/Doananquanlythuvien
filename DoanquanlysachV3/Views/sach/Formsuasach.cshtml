@model DoanquanlysachV3.Models.SACH
@{
    ViewBag.Title = "Formsuasach";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>Form sửa sách</h2>
@using (Html.BeginForm("suasach", "sach", FormMethod.Post))
{
    @Html.AntiForgeryToken()

